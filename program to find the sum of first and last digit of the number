#include<stdio.h>

int main()
{
    printf("\n\n\t program to find the sum of first and last digit of the number\n\n\n");
    int input, firstNumber, lastNumber;

    printf("Enter a number: ");
    scanf("%d", &input);
    lastNumber = input%10;
    
    firstNumber = input;

    while(firstNumber >= 10)
    {
        firstNumber /= 10;
    }

    printf("\n\n\nAddition of first and last number is: %d + %d = %d\n", firstNumber, lastNumber, firstNumber+lastNumber);
    printf("\n\n\t\t\tThank you !\n\n\n");
    return 0;
}
