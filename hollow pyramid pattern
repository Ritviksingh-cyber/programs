#include <stdio.h>
int main()
{
    int i,j,k,l=1;
    for(i=1;i<=5;i++)
{
    for(j=1;j<=5-i;j++)
{
    printf(" ");
}
    for(k=1;k<=l;k++)
    {
        if(i!=5&&(k==1||k==l))
        {
            printf("*");
        }
        else if(i!=5&&(k!=1&&k!=l))
        {
            printf(" ");
        }
        else
        {
            printf("*");
        }
    }
    l=l+2;
    for(j=1;j<=5-i;j++)
    {
        printf(" ");
    }
    printf("\n");
}
return 0;
}
